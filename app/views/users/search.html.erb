<% provide(:title, "検索結果") %>
<% provide(:class_title, "検索結果") %>

<%= render "index" %>


<table class = "table table-condensed table-hover" id = "table-users">
  <% if @search_users.any? %>
    <thead>
      <tr>
        <th><%= User.human_attribute_name :name %></th>
      </tr>
    </thead>
    
    <% @search_users.each do |result| %>
      <tr>
        <td><%= link_to result.name, user_path(result.id) %></td>
      </tr>
    <% end %>
  <% else %>
      <h2>キーワードを含むユーザーは存在いたしません！</h2>
  <% end %>
</table>  